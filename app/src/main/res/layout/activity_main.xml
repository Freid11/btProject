<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.louco.btproject.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_btOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Включение" />

        <Button
            android:id="@+id/bt_Discover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="обнаружить себя" />
        <Button
            android:id="@+id/bt_Discovery_devices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Поиск устройств" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_list_devices"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
